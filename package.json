{
  "name": "@smendivil/user",
  "version": "1.0.1",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "build": "tsc",
    "postbuild": "npm run test:cov",
    "test": "jest --config jest.config.js",
    "test:watch": "jest --watch --config jest.config.js",
    "test:cov": "jest --coverage --config jest.config.js",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm run test:cov",
    "publish:public": "npm publish --access public",
    "install-test-deploy": "npm install && npm test && npm publish --access public"
  },
  "jest": {
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "dependencies": {
    "@nestjs/typeorm": "^10.0.2",
    "@smendivil/entity": "^1.0.2",
    "typeorm": "^0.3.20"
  },
  "license": "MIT",
  "keywords": [
    "user",
    "nestjs",
    "orm",
    "typescript"
  ],
  "overrides": {
    "glob": "^9.0.0"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "package.json"
  ],
  "author": "Sabás Mendívil",
  "description": "User module using @smendivil/entity",
  "devDependencies": {
    "@nestjs/testing": "^10.4.6",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.8.6",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5"
  }
}
